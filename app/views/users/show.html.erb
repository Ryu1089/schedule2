<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @user.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><% if @user.all == true %>
         ○
        <% else @user.all == false %>
        
        <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.note %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る",:users %></li>
  </ul>
  <ul>
    <li><%= link_to"スケジュールを編集する",:user %></li>
  </ul>
  <ul>
    <li><%= link_to"スケジュールを削除する",:users %></li>
  </ul>
</div>